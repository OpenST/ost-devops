[Unit]
Description=ostView - Node server for OST Analytics Pentaho BI Server
After=remote-fs.target
After=network-online.target
Wants=network-online.target

[Service]
User=deployer
Type=forking
Restart=on-failure
RestartSec=1
ExecStart=/bin/bash {{app_base_directory}}/pentaho-server/start-pentaho.sh
ExecStop=/bin/bash {{app_base_directory}}/pentaho-server/stop-pentaho.sh
TimeoutSec=300
KillSignal=SIGINT

[Install]
WantedBy=multi-user.target